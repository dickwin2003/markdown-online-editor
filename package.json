{
  "name": "markdown-online-editor",
  "version": "2.3.0",
  "author": "nicejade",
  "private": true,
  "description": "Arya，是一款基于 Vue、Vditor，为未来而构建的在线 Markdown 编辑器；轻量且强大：内置粘贴 HTML 自动转换为 Markdown，支持 PPT 预览，以及绘制流程图、甘特图、时序图、任务列表、五线谱，可导出携带样式的图片、PDF、微信公众号特制的 HTML 等。",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "yarn serve",
    "serve": "vue-cli-service serve --open",
    "build": "vue-cli-service build",
    "watcher": "onchange \"src/**/**/*.{js,css,scss,vue}\" -- prettier --write {{changed}}",
    "prettier": "prettier --write \"src/**/**/*.{js,css,scss,vue}\"",
    "lint": "vue-cli-service lint",
    "test": "vue-cli-service test:unit",
    "testbuild": "vue-cli-service build --mode development",
    "deploy": "bash ./commands/deploy.sh",
    "analyz": "cross-env NODE_ENV=production npm_config_report=true npm run build",
    "clear-commit-msg": "bash ./commands/clear-commit-msg.sh",
    "eslint-fix": "eslint src/**/**/*.vue --fix",
    "format-code": "prettier-eslint --write \"src/**/*.{js,vue,css,scss}\"",
    "precommit-msg": "echo '🐉 Start pre-commit checks...' && exit 0",
    "preview": "node ./commands/preview.js"
  },
  "dependencies": {
    "canvg": "^3.0.10",
    "element-ui": "^2.15.13",
    "fitty": "^2.4.2",
    "hint.css": "^2.7.0",
    "html2canvas": "^1.4.1",
    "html2pdf.js": "^0.10.1",
    "lodash": "4.17.21",
    "lodash.assign": "^4.2.0",
    "lodash.clonedeep": "^4.5.0",
    "register-service-worker": "^1.7.2",
    "reveal.js": "4.5.0",
    "vditor": "3.10.8",
    "vue": "^2.7.14",
    "vue-meta": "^2.4.0",
    "vue-router": "^3.6.5"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/eslint-parser": "^7.27.0",
    "@vue/cli-plugin-babel": "^5.0.8",
    "@vue/cli-plugin-eslint": "^5.0.8",
    "@vue/cli-plugin-pwa": "^5.0.8",
    "@vue/cli-plugin-unit-jest": "^5.0.8",
    "@vue/cli-service": "^5.0.8",
    "@vue/test-utils": "^1.3.5",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^29.7.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-vue": "^9.17.0",
    "husky": "^8.0.3",
    "less": "^4.2.0",
    "less-loader": "^11.1.3",
    "lint-staged": "^13.3.0",
    "onchange": "^7.1.0",
    "prettier-eslint-cli": "^7.1.0",
    "size-plugin": "^3.0.0",
    "svg-sprite-loader": "^6.0.11",
    "svgo-loader": "4.0.0",
    "vue-svg-loader": "^0.16.0",
    "vue-template-compiler": "^2.7.14",
    "webpack-bundle-analyzer": "4.9.0"
  },
  "babel": {
    "presets": [
      "@vue/cli-plugin-babel/preset"
    ]
  },
  "eslintConfig": {
    "globals": {
      "L": true
    },
    "root": true,
    "env": {
      "node": true,
      "es6": true,
      "browser": true
    },
    "parser": "vue-eslint-parser",
    "parserOptions": {
      "parser": "@babel/eslint-parser",
      "requireConfigFile": false,
      "sourceType": "module",
      "ecmaVersion": 2020
    },
    "rules": {
      "no-console": 0,
      "no-useless-escape": 0,
      "no-multiple-empty-lines": [
        2,
        {
          "max": 3
        }
      ],
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "semi": false,
          "trailingComma": "none",
          "bracketSpacing": true,
          "jsxBracketSameLine": true,
          "insertPragma": true,
          "requirePragma": false
        }
      ]
    },
    "plugins": [],
    "extends": [
      "plugin:vue/essential",
      "plugin:prettier/recommended",
      "eslint:recommended"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "printWidth": 100,
    "proseWrap": "never",
    "endOfLine": "lf"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "eslintIgnore": [
    "package.json"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn run precommit-msg && lint-staged"
    }
  },
  "lint-staged": {
    "**/**.{js,json,pcss,vue,css,scss}": [
      "prettier --write"
    ]
  }
}
